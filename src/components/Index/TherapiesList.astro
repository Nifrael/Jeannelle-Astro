---
import { Image } from "astro:assets";
import Plant from "@assets/images/Icons/Nature.svg";
import YinYoga from "@assets/images/Icons/Yin.svg";
import Feet from "@assets/images/Icons/Reflexology.svg";
import Amma from "@assets/images/Icons/Chair.svg";
import Brain from "@assets/images/Icons/Brain.svg";
import Hour from "@assets/images/Icons/Hour.svg";

const therapies = [
  {
    id: 1,
    title: "Naturopathie - (Micro)Nutritionniste",
    description:
      "Optimisons votre santé par une meilleure hygiène de vie et une meilleure compréhension de vos symptômes afin de les soulager. ",
    icon: Plant,
    duration: "1h",
    price: "65€",
  },
  {
    id: 2,
    title: "Réflexologie Plantaire Energétique Chinoise",
    description:
      "Revitalisons votre corps en optimisant la fonction de vos organes via les zones réflexes du pied et restaurons la circulation énergétique.",
    icon: Feet,
    duration: "45 min",
    price: "50€",
  },
  {
    id: 3,
    title: "Yin Yoga - Cours Collectif",
    description:
      "Pratique de yoga introscpective et accesible à tous, utilisant des postures simples pour réduir le stress et améliorer le bien-être général du corps et de l'esprit.",
    icon: YinYoga,
    duration: "1h",
    price: "13€",
  },
  {
    id: 4,
    title: "Psychopraticienne",
    description:
      "Ecoute bienveillante, sans jugement pour vous aider à trouver clarté et sens dans vos épreuves, permettant une reconnexion chaleureuse avec vous-même.",
    icon: Brain,
    duration: "1h à 1h30",
    price: "65€",
  },
  {
    id: 5,
    title: "Massage Amma",
    description:
      "Massage apaisant qui se pratique assis et habillé, utilisant des pressions et acupressions pour procurer une détente à la fois musculaire et énergétique.",
    icon: Amma,
    duration: "30 min",
    price: "30€",
  },
  { title: "A Venir...", description: "", icon: Hour },
];
---

<h1>Nos thérapies</h1>
<div class="therapies-container">
  {
    therapies.map((therapie) => (
      <div class="therapie-card">
        <Image src={therapie.icon} alt={therapie.title} width={40} id="icon" />
        <h5>{therapie.title}</h5>
        <p>{therapie.description}</p>
        {therapie.duration && therapie.price && (
          <p>
            <span>{therapie.price}</span> | {therapie.duration}
          </p>
        )}
      </div>
    ))
  }
</div>

<style lang="scss">
  @use "@styles/config/variables" as *;
  @use "@styles/config/mixins" as *;

  h1 {
    text-align: center;
    margin: 0 auto 5rem auto;
  }

  .therapies-container {
    width: 85%;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin: 2rem auto;
  }

  .therapie-card {
    background: #fff;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0px -1px 3px 3px rgba(207, 154, 113, 0.249);
    display: grid;
    align-items: center;
    justify-content: center;
    grid-template-rows: 40px 120px auto 60px;
    height: 100%;

    p {
      text-align: justify;
    }

    p:last-of-type {
      text-align: center;
      margin-top: auto;
    }

    h5 {
      color: var(--important-color);
      text-align: center;
      margin: 1rem;
    }

    a {
      margin: 0 auto;
    }

    span {
      font-size: var(--h5);
      text-align: center;
      font-weight: 700;
      margin-top: 1rem;
      color: var(--important-color);
    }
  }

  #icon {
    margin: 0 auto;
  }

  .therapie-link {
    display: inline-flex;
    align-items: center;
    color: #cf9a71;
    text-decoration: none;
    font-weight: 500;
    margin-top: auto;
  }

  @include breakpoint-up($breakpoint-tablet) {
    .therapies-container {
      grid-template-columns: repeat(2, minmax(280px, 1fr));
    }
  }

  @include breakpoint-up($breakpoint-desktop) {
    .therapies-container {
      width: 85%;
      grid-template-columns: repeat(3, minmax(280px, 1fr));
    }
    .therapie-card {
      transition:
        transform 0.3s ease,
        box-shadow 0.3s ease;
      &:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      }
    }
  }

  @include breakpoint-up($breakpoint-desktop-xl) {
    .therapies-container {
      width: 90%;
      max-width: 1200px;
    }
  }
</style>
