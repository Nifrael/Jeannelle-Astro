---
import { Image } from "astro:assets";
import Entrée from "@assets/images/Welcome/Entrée.jpg";
import Lumière from "@assets/images/Welcome/Lumière.jpg";
import Fauteuils from "@assets/images/Welcome/Fauteuils.jpg";
import Yoga from "@assets/images/Welcome/Yoga.jpg";
import Accueil from "@assets/images/Welcome/Accueil.jpg";
---

<div class="welcome-photos">
  <Image
    src={Lumière}
    alt="Lampe cosy allumée devant le mur de pierre du local Jeannelle"
    widths={[400, 800, 1200, 1800]}
    sizes="(max-width: 768px) 95vw, 20vw"
    quality={70}
  />
  <Image
    src={Fauteuils}
    alt="Fauteuils confortables dans le local Jeannelle"
    widths={[400, 800, 1200, 1800]}
    sizes="(max-width: 768px) 95vw, 20vw"
    quality={70}
  />
  <Image
    src={Entrée}
    alt="Entrée du local Jeannelle"
    widths={[400, 800, 1200, 1800]}
    sizes="(max-width: 768px) 95vw, 20vw"
    quality={70}
  />
  <Image
    src={Yoga}
    alt="Tapis de Yoga disposés dans la grande salle Jeannelle."
    widths={[400, 800, 1200, 1800]}
    sizes="(max-width: 768px) 95vw, 20vw"
    quality={70}
  />
  <Image
    src={Accueil}
    alt="Chaises d'attente du local Jeannelle"
    widths={[400, 800, 1200, 1800]}
    sizes="(max-width: 768px) 95vw, 20vw"
    quality={70}
  />
</div>

<style lang="scss">
  @use "@styles/config/variables" as *;
  @use "@styles/config/mixins" as *;

  .welcome-photos {
    width: 95%;
    margin: 0 auto;
    display: grid;
    justify-items: center;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: repeat(4, auto);
    row-gap: 0.25rem;
    column-gap: 0.5rem;

    img {
      width: 80%;
      height: auto;
    }

    > :first-child {
      grid-column: 1;
      grid-row: 1/2;
      border-top-right-radius: 60%;
      border-top-left-radius: 50%;
      border-bottom-left-radius: 50%;
      border-bottom-right-radius: 40%;
    }

    > :nth-child(2) {
      grid-column: 2;
      grid-row: 1/2;
      border-top-right-radius: 50%;
      border-top-left-radius: 60%;
      border-bottom-left-radius: 40%;
      border-bottom-right-radius: 50%;
    }

    > :nth-child(3) {
      grid-column: 1/3;
      grid-row: 2/4;
      border-top-right-radius: 40%;
      border-top-left-radius: 40%;
      border-bottom-right-radius: 40%;
      border-bottom-left-radius: 40%;
    }

    > :nth-child(4) {
      grid-column: 1;
      grid-row: 4/5;
      border-top-left-radius: 50%;
      border-bottom-right-radius: 60%;
      border-bottom-left-radius: 40%;
      border-top-right-radius: 40%;
    }

    > :nth-child(5) {
      grid-column: 2;
      grid-row: 4/5;
      border-top-right-radius: 40%;
      border-bottom-left-radius: 60%;
      border-bottom-right-radius: 40%;
      border-top-left-radius: 40%;
    }
  }

  @include breakpoint-up($breakpoint-tablet) {
    .welcome-photos {
      max-width: 95%;
      height: auto;
      margin: 0 auto;
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      grid-template-rows: 1fr 1fr;

      > :first-child {
        grid-column: 1;
        grid-row: 1;
        border-top-left-radius: 80%;
        border-top-right-radius: 80%;
        border-bottom-left-radius: 80%;
        border-bottom-right-radius: 80%;
      }
      > :first-child img {
        width: 60%;
      }

      > :nth-child(2) {
        grid-column: 4;
        grid-row: 1;
      }
      > :nth-child(2) img {
        width: 100%;
        border-top-left-radius: 60%;
        border-top-right-radius: 80%;
        border-bottom-left-radius: 70%;
        border-bottom-right-radius: 30%;
        padding-top: 20%;
      }

      > :nth-child(3) {
        grid-column: 2/4;
        grid-row: 1/3;
      }
      > :nth-child(3) img {
        width: 100%;
        border-top-left-radius: 60%;
        border-top-right-radius: 40%;
        border-bottom-left-radius: 50%;
        border-bottom-right-radius: 70%;
        padding-bottom: 20%;
      }

      > :nth-child(4) {
        grid-column: 1;
        grid-row: 2/3;
      }
      > :nth-child(4) img {
        width: 100%;
        border-top-left-radius: 80%;
        border-top-right-radius: 60%;
        border-bottom-left-radius: 30%;
        border-bottom-right-radius: 70%;
        padding-top: 20%;
      }

      > :nth-child(5) {
        grid-column: 4;
        grid-row: 2/3;
      }
      > :nth-child(5) img {
        width: 100%;
        max-height: 70%;
        border-top-left-radius: 40%;
        border-top-right-radius: 60%;
        border-bottom-left-radius: 70%;
        border-bottom-right-radius: 50%;
        padding-bottom: 20%;
      }
    }
  }
</style>
