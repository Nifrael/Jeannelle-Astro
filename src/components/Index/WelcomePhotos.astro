---
import { Image } from "astro:assets";
import Background from "../../assets/Background.svg";
import Home from "../../assets/images/Welcome/Home.jpg";
import Home2 from "../../assets/images/Welcome/Home2.jpg";
import Home3 from "../../assets/images/Welcome/Home3.jpg";
import Home4 from "../../assets/images/Welcome/Home4.jpg";
import Home5 from "../../assets/images/Welcome/Home5.jpg";
---

<div class="container-photos">
  <div class="background-welcome">
    <Image src={Background} alt="Fond d'Ã©cran" />
  </div>
  <div class="content-welcome">
    <div class="welcome-photos">
      <div>
        <Image src={Home} alt="Accueil" />
      </div>
      <div>
        <Image src={Home2} alt="Accueil" />
      </div>
      <div>
        <Image src={Home3} alt="Accueil" />
      </div>
      <div>
        <Image src={Home4} alt="Accueil" />
      </div>
      <div>
        <Image src={Home5} alt="Accueil" />
      </div>
    </div>
  </div>
</div>
<div class="gradient"></div>

<style>
  .container-photos {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .background-welcome {
    background-color: var(--white);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: blur(1px);
    }
  }

  .content-welcome {
    position: relative;
    z-index: 2;
  }

  .welcome-photos {
    max-width: 95%;
    margin: 0 auto;
    padding: 1% 0% 4% 0%;
    display: flex;
    align-items: center;
    overflow: hidden;
    position: relative;
    gap: 2%;
    img {
      max-width: 100%;
      max-height: 100%;
      width: 100%;
      height: 100%;
    }
    div:first-child {
      order: 3;
      display: flex;
      justify-content: center;
    }
    div:first-child img {
      order: 3;
      width: 90%;
      border-top-left-radius: 80%;
      border-top-right-radius: 80%;
      border-bottom-left-radius: 80%;
      border-bottom-right-radius: 80%;
      padding-top: 30%;
      scale: 1.2;
    }
    div:nth-child(2) {
      order: 2;
    }
    div:nth-child(2) img {
      width: 100%;
      border-top-left-radius: 60%;
      border-top-right-radius: 80%;
      border-bottom-left-radius: 70%;
      border-bottom-right-radius: 30%;
      padding-top: 20%;
    }
    div:nth-child(3) {
      order: 1;
    }
    div:nth-child(3) img {
      width: 100%;
      border-top-left-radius: 60%;
      border-top-right-radius: 40%;
      border-bottom-left-radius: 50%;
      border-bottom-right-radius: 70%;
      padding-bottom: 20%;
    }
    div:nth-child(4) {
      order: 4;
    }
    div:nth-child(4) img {
      width: 100%;
      border-top-left-radius: 80%;
      border-top-right-radius: 60%;
      border-bottom-left-radius: 30%;
      border-bottom-right-radius: 70%;
      padding-top: 20%;
    }
    div:nth-child(5) {
      order: 5;
    }
    div:nth-child(5) img {
      width: 100%;
      max-height: 70%;
      border-top-left-radius: 40%;
      border-top-right-radius: 60%;
      border-bottom-left-radius: 70%;
      border-bottom-right-radius: 50%;
      padding-bottom: 20%;
    }
  }

  @media (width < 1024px) {
    .welcome-photos {
      max-width: 90%;
      margin: 0% auto;
      display: grid;
      align-items: center;
      grid-template-columns: repeat(4, 1fr);
      grid-template-rows: repeat(4, 1fr);
      gap: 1vw;
      padding: 4% 0 3% 0;
      div:first-child {
        grid-column: 2/4;
        grid-row: 2/4;
        transform: rotate(45deg);
      }
      div:first-child {
        grid-column: 2/4;
        grid-row: 2/4;
        transform: rotate(45deg);
      }
      div:first-child img {
        width: 100%;
        transform: rotate(-45deg);
        border-radius: 50%;
        border: var(--white) 1vw solid;
        overflow: hidden;
        padding-top: 0%;
      }
      div:nth-child(2) {
        grid-column: 1/3;
        grid-row: 1/3;
      }
      div:nth-child(2) img {
        border-top-right-radius: 50%;
        border-top-left-radius: 70%;
        border-bottom-left-radius: 50%;
        border-bottom-right-radius: 0%;
        padding-top: 0%;
      }
      div:nth-child(3) {
        grid-column: 3/5;
        grid-row: 1/3;
      }
      div:nth-child(3) img {
        border-top-right-radius: 70%;
        border-top-left-radius: 50%;
        border-bottom-right-radius: 50%;
        padding-bottom: 0;
      }
      div:nth-child(4) {
        margin-top: -10px;
        grid-column: 1/3;
        grid-row: 3/5;
      }
      div:nth-child(4) img {
        border-top-left-radius: 50%;
        border-bottom-right-radius: 50%;
        border-bottom-left-radius: 70%;
        border-top-right-radius: 0%;
        padding-top: 0;
      }
      div:nth-child(5) {
        margin-top: -10px;
        grid-column: 3/5;
        grid-row: 3/5;
      }
      div:nth-child(5) img {
        width: 100%;
        border-top-right-radius: 50%;
        border-bottom-left-radius: 50%;
        border-bottom-right-radius: 70%;
        border-top-left-radius: 0%;
        padding-bottom: 0%;
      }
    }
  }
</style>
