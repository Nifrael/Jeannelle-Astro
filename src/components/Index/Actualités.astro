---
import { Image } from "astro:assets";
import Yoga from "@assets/images/Welcome/Yoga.jpg";

const actualities = [
  {
    title: "Planning Yin Yoga",
    description:
      "Rejoignez-nous pour un nouveau cours de Yin Yoga tous les vendredis à 18h30.",
    img: Yoga,
    alt: "Cours de Yin Yoga",
    phone: "07.60.48.48.06",
  },
];
---

<section class="news-section">
  <div class="limited-container">
    <h1>Actualités & Evenements</h1>
    <div class="news-cards">
      {
        actualities.map((actu) => (
          <article class="news-card">
            <Image src={actu.img} alt={actu.alt} class="news-image" />
            <div class="news-card-content">
              <h5>{actu.title}</h5>
              <p>{actu.description}</p>
              <p id="phone-number">{actu.phone}</p>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style lang="scss">
  @use "src/styles/config/variables.scss" as *;
  @use "src/styles/config/mixins.scss" as *;

  .news-section {
    padding: 2rem 2rem;
    h1 {
      text-align: center;
      margin-bottom: 3rem;
    }
  }

  .news-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: #333;
  }

  .news-cards {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
    max-width: 1200px;
    margin: 2rem auto;
  }

  .news-card {
    width: 100%;
    background-color: #fff;
    border-radius: 15px;
    box-shadow: 0px -1px 3px 3px rgba(207, 154, 113, 0.249);
    overflow: hidden;
  }

  .news-image {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-bottom: 1px solid #eee;
  }

  .news-card-content {
    padding: 1.5rem;
    h5 {
      margin: 0 0 0.75rem 0;
    }
    p {
      line-height: 1.6;
      margin: 0 0 1.5rem 0;
    }
    #phone-number {
      font-weight: bold;
      color: var(--important-color);
      text-align: center;
    }
  }

  .news-card-content p {
  }

  @include breakpoint-up($breakpoint-desktop) {
    .news-card {
      width: 40%;
      transition: all 0.2s ease-in-out;
    }

    .news-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }
  }
</style>
