---
import { Image } from "astro:assets";
import YinYoga from "../../assets/images/Planning/YinYoga.jpg";
---

<div class="limited-container">
  <div class="main-title planning-container">
    <h1>Actualités</h1>
    <Image src={YinYoga} alt="Actualités YinYoga" />
    <h1>Planning</h1>
  </div>
</div>

<style>
  .planning-container {
    width: 60%;
    box-shadow: 0px -1px 6px 6px rgba(207, 154, 113, 0.249);
    border-radius: 5px;
    padding: 1rem;
  }

  .planning-container img {
    width: 80%;
    height: auto;
    border-radius: 5px;
  }

  @media (width < 768px) {
    .planning-container {
      width: 95%;
      padding: 0.5rem;
      img {
        width: 90%;
        height: auto;
      }
    }
  }
</style>
